// Place your settings in this file to overwrite default and user settings.
{
	"javascript.validate.enable": false,
	"jshint.enable": true,
	"jshint.options": {
		"asi": true,
		"bitwise": false,
		"camelcase": true,
		"curly": true,
		"eqeqeq": true,
		"eqnull": true,
		"esnext": true,
		"expr": true,
		"forin": true,
		"immed": true,
		"indent": 4,
		"latedef": true,
		"laxbreak": true,
		"newcap": true,
		"noarg": true,
		"noempty": true,
		"nonew": true,
		"nonbsp": true,
		"node": true,
		"onevar": true,
		"quotmark": "single",
		"regexp": true,
		"undef": true,
		"unused": true,
		"trailing": true,
		"strict": true,
		"sub": true,
		"maxlen": 160,
		"predef": [ "$", "localStorage", "document", "window", "chrome", "XMLHttpRequest" ]
	}
}